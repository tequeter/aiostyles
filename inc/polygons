#------------------------------------------------------------------------------
# buildings

building=yes &
  amenity=place_of_worship &
  religion=christian
                  { set building=church }

building=yes &
  (amenity=social_centre |
    amenity=social_facility |
    amenity=police |
    amenity=courthouse |
    amenity=community_centre |
    office=government |
    amenity=fire_station |
    amenity=prison |
    amenity=post_office |
    amenity=bank |
    amenity=bureau_de_change)
                  { set building=public }

building=church |
  building=cathredral |
  building=chapel |
  building=public |
  building=school                                 [0x10f1b resolution 23]

building!=no &
  building!=public &
  building!=school &
  building!=church &
  building!=cathredral &
  building!=chapel &
  building!=proposed &
  mkgmap:residential!=*                          [0x13 resolution 24]

