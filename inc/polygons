landuse=forest &
  (wood=deciduous | leaf_type=broadleaved)      [0x22 resolution 24-23]
landuse=forest &
   (wood=mixed | leaf_type=mixed) 		        [0x23 resolution 24-23]
landuse=forest 					                [0x20 resolution 24-23]

