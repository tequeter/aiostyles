# landuse

place=village | landuse=residential             [0x03 resolution 18]

place=island &
  name=* & 
  area_size() < 1000000 & !(natural=coastline)  [0x53 resolution 19 continue]

  place=islet                                   [0x53 resolution 22 continue]

highway=pedestrian & 
  (area=yes | area=true | area=1)               [0x12 resolution 22]

landuse=forest                                  [0x20 resolution 22-18 continue]
